{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "../dist",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext", "DOM"],
    "alwaysStrict": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "./"],
    "types": []
  },
  "include": ["./"],
  "exclude": ["node_modules", "dist"]
}
